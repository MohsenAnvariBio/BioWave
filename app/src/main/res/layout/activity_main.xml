<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="#F7E6E9"
    tools:context=".MainActivity">

    <!-- Left-side control panel -->

    <!-- Chart area with two stacked graphs -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.07"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- SpO₂ -->
        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/info_box"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/spo2Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SpO₂"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/spo2TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- %"
                android:textColor="#000000"
                android:textSize="22sp" />
        </LinearLayout>

        <!-- Heart Rate -->
        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/info_box"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/hrLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heart Rate"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hrTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- bpm"
                android:textColor="#000000"
                android:textSize="22sp" />
        </LinearLayout>

        <!-- Temperature -->
        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/info_box"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/tempLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tempTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- °C"
                android:textColor="#000000"
                android:textSize="22sp" />
        </LinearLayout>

        <!-- Device Info -->
        <TextView
            android:id="@+id/deviceList"
            android:layout_width="123dp"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:text="Device info"
            android:textSize="16sp" />

        <!-- Scan Button -->
        <Button
            android:id="@+id/scanButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:background="@drawable/rect_button"
            android:text="START SCAN"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="0.93"
        android:layout_height="match_parent"
        android:background="#F7E6E9">

        <!-- ECG Chart -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:ignore="NestedWeights">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/ecgChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F7E6E9" />

            <Switch
                android:id="@+id/autoYECGSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto Y"
                android:textSize="14sp"
                android:checked="true"
                android:layout_gravity="bottom|end"
                android:layout_margin="4dp" />
        </FrameLayout>

        <!-- PPG Chart -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/ppgChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F7E6E9" />

            <Switch
                android:id="@+id/autoYPPGSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto Y"
                android:textSize="14sp"
                android:checked="true"
                android:layout_gravity="end|bottom"
                android:layout_margin="4dp" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>
