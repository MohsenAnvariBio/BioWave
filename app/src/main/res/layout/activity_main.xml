<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- Left-side control panel -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="0.3"
        android:layout_height="match_parent"
        android:padding="8dp">

        <!-- Scan button -->

        <!-- Device info -->

        <!-- Measurement boxes -->

        <!-- Control buttons -->
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="0dp">

            <!-- SpO₂ -->
            <LinearLayout
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/info_box"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/spo2Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SpO₂"
                    android:textColor="#283366"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/spo2TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- %"
                    android:textColor="#000000"
                    android:textSize="22sp" />
            </LinearLayout>

            <!-- Heart Rate -->
            <LinearLayout
                android:layout_width="178dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/info_box"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/hrLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Heart Rate"
                    android:textColor="#283366"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/hrTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- bpm"
                    android:textColor="#000000"
                    android:textSize="22sp" />
            </LinearLayout>

            <!-- Temperature -->
            <LinearLayout
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/info_box"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tempLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temperature"
                    android:textColor="#283366"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tempTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- °C"
                    android:textColor="#000000"
                    android:textSize="22sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/deviceList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@android:color/transparent"
                android:padding="5dp"
                android:text="Device info"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/decreaseButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/minus"
                android:contentDescription="Decrease"
                android:padding="0dp" />

            <Button
                android:id="@+id/increaseButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/plus"
                android:contentDescription="Increase"
                android:padding="0dp" />

            <Button
                android:id="@+id/scanButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:backgroundTint="#283366"
                android:text="START SCAN"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Chart area with two stacked graphs -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="0.7"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:padding="0dp"
        android:background="@android:color/white">

        <!-- ECG Chart -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:padding="0dp"
            tools:ignore="NestedWeights">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/ecgChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:background="@android:color/white" />

            <Switch
                android:id="@+id/autoYECGSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto Y"
                android:textSize="14sp"
                android:checked="true"
                android:layout_gravity="bottom|end"
                android:layout_margin="4dp" />
        </FrameLayout>

        <!-- PPG Chart -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:padding="0dp">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/ppgChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:background="@android:color/white"
                android:padding="0dp" />

            <Switch
                android:id="@+id/autoYPPGSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto Y"
                android:textSize="14sp"
                android:checked="true"
                android:layout_gravity="end|bottom"
                android:layout_margin="4dp" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>